# =============================================
# MoneyMind Finance AI Agent - Environment Configuration
# =============================================
# Copy this file to .env and fill in your values

# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://moneymind_user:moneymind_secure_password_2024@localhost:5432/moneymind

# Redis Cache
REDIS_URL=redis://:moneymind_redis_password_2024@localhost:6379/0

# RabbitMQ Message Broker
RABBITMQ_URL=amqp://moneymind_user:moneymind_rabbitmq_password_2024@localhost:5672//

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=moneymind_documents

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=moneymind_neo4j_password_2024

# =============================================
# JWT Authentication
# =============================================
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================
# Google OAuth (Gmail Integration)
# =============================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# =============================================
# Stripe Payments
# =============================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================
# LLM Configuration
# =============================================
# Ollama (Local LLM - Preferred)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:2b

# HuggingFace (Fallback)
HUGGINGFACE_API_TOKEN=hf_...
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# =============================================
# External APIs
# =============================================
# ExchangeRate API - Get from: https://www.exchangerate-api.com/
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# AlphaVantage Stock API - Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# =============================================
# Sandbox MCP (Code Execution)
# =============================================
SANDBOX_MCP_URL=http://localhost:8001

# =============================================
# Celery Background Tasks
# =============================================
CELERY_BROKER_URL=amqp://moneymind_user:moneymind_rabbitmq_password_2024@localhost:5672//
CELERY_RESULT_BACKEND=redis://:moneymind_redis_password_2024@localhost:6379/1
